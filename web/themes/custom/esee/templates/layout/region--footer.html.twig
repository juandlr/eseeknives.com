{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="footer bg-slateGray pt-12 pb-4 text-white">
      <div class="container mx-auto max-w-5xl pl-4 pr-4">
        <div class="flex justify-between flex-wrap">
          {{ content }}
        </div>
      </div>
    </div>
  </div>
  <div class="text-center bg-slateGray text-ashGray text-sm pb-12 px-4">&copy; {{ "now"|date("Y") }}  ESEE Knives. All Rights Reserved.</div>
{% endif %}
